{
  "theme": "dark",
  "editor": {
    "defaultLanguage": "markdown",
    "wrapLines": true
  },
  "ai": {
    "temperature": 0.5
  },
  "hooks": {},
  "tools": {
    "enabled": ["bash", "read", "edit", "write", "glob", "grep"]
  },
  "workspace": {
    "autoSave": true
  },
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "ANTHROPIC_MODEL": "opusplan"
  },
  "permissions": {
    "allowed": [
      "Edit",
      "Read",
      "Bash(git commit:*)",
      "Bash(git add:*)",
      "Bash(git status)",
      "Bash(git diff)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git pull)",
      "Bash(git push)",
      "Bash(git show:*)",
      "Bash(git blame:*)",
      "Bash(git remote:*)",
      "Bash(git tag:*)",
      "Bash(git stash list)",
      "Bash(git stash show:*)",
      "Bash(npm run:*)",
      "Bash(npm install:*)",
      "Bash(npm test)",
      "Bash(npm run build)",
      "Bash(npm run dev)",
      "Bash(npm run lint)",
      "Bash(npm list:*)",
      "Bash(npm outdated:*)",
      "Bash(npm audit:*)",
      "Bash(yarn:*)",
      "Bash(yarn list:*)",
      "Bash(yarn outdated:*)",
      "Bash(yarn audit:*)",
      "Bash(ls:*)",
      "Bash(ll:*)",
      "Bash(la:*)",
      "Bash(cat:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(locate:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(pwd)",
      "Bash(whoami)",
      "Bash(id)",
      "Bash(date)",
      "Bash(uptime)",
      "Bash(df:*)",
      "Bash(du:*)",
      "Bash(free:*)",
      "Bash(ps:*)",
      "Bash(top:*)",
      "Bash(htop:*)",
      "Bash(history:*)",
      "Bash(env)",
      "Bash(printenv:*)",
      "Bash(echo:*)",
      "Bash(printf:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(tr:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      "Bash(diff:*)",
      "Bash(cmp:*)",
      "Bash(md5sum:*)",
      "Bash(sha256sum:*)",
      "Bash(curl -I:*)",
      "Bash(curl --head:*)",
      "Bash(wget --spider:*)",
      "Bash(ping:*)",
      "Bash(nslookup:*)",
      "Bash(dig:*)",
      "Bash(host:*)",
      "Bash(netstat:*)",
      "Bash(ss:*)",
      "Bash(lsof:*)",
      "Bash(composer show:*)",
      "Bash(composer outdated:*)",
      "Bash(composer validate:*)",
      "Bash(pip list:*)",
      "Bash(pip show:*)",
      "Bash(pip check:*)",
      "Bash(python --version)",
      "Bash(python -V)",
      "Bash(python3 --version)",
      "Bash(python3 -V)",
      "Bash(php --version)",
      "Bash(php -v)",
      "Bash(php -m)",
      "Bash(php -i)",
      "Bash(perl --version)",
      "Bash(perl -V)",
      "Bash(node --version)",
      "Bash(node -v)",
      "Bash(npm --version)",
      "Bash(npm -v)",
      "Bash(yarn --version)",
      "Bash(java --version)",
      "Bash(java -version)",
      "Bash(javac --version)",
      "Bash(javac -version)",
      "Bash(mvn --version)",
      "Bash(mvn -v)",
      "Bash(gradle --version)",
      "Bash(gradle -v)",
      "Bash(cpan -v)",
      "Bash(cpanm --version)"
    ],
    "denied": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(git reset --hard:*)",
      "Bash(git push --force:*)",
      "Bash(npm publish:*)",
      "Bash(composer global require:*)",
      "Bash(composer create-project:*)",
      "Bash(pip install --user:*)",
      "Bash(pip install --break-system-packages:*)",
      "Bash(python -m pip install --user:*)",
      "Bash(cpan -i:*)",
      "Bash(cpanm --sudo:*)",
      "Bash(mvn deploy:*)",
      "Bash(gradle publish:*)",
      "Bash(gradle uploadArchives:*)",
      "Bash(npm install -g:*)",
      "Bash(yarn global add:*)",
      "Bash(pnpm add -g:*)",
      "Bash(php -r:*)",
      "Bash(python -c:*)",
      "Bash(perl -e:*)",
      "Bash(node -e:*)",
      "Bash(java -jar:*/tmp/*)",
      "Bash(java -jar:*/var/tmp/*)",
      "Bash(wget:*|curl:*|sh)",
      "Bash(curl:*|bash)",
      "Bash(curl:*|sh)",
      "Bash(wget:*|bash)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(mount:*)",
      "Bash(umount:*)",
      "Bash(systemctl:*)",
      "Bash(service:*)",
      "Bash(kill -9:*)",
      "Bash(killall:*)",
      "Bash(pkill:*)"
    ]
  },
  "git": {
    "autoStage": false,
    "requireCommitMessage": true,
    "commitMessageTemplate": "[type]: brief description\n\n- Detailed changes\n- Impact on other components",
    "protectedBranches": ["main", "master", "production", "develop"],
    "requirePullRequest": true
  },
  "security": {
    "preventSecretCommits": true,
    "scanDependencies": true,
    "requireCodeReview": true
  },
  "notifications": {
    "onError": true,
    "onSuccess": true,
    "onCommit": true
  },
  "team": {
    "reviewers": ["project-lead", "senior-dev"],
    "codeOwners": {
      "src/": ["development-team"],
      "tests/": ["qa-team"],
      "docs/": ["documentation-team"],
      "config/": ["devops-team"]
    }
  }
}
